@model Transfermarkt.Web.Models.Club
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="book-example panel panel-primary">
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <strong>@Html.LabelFor(model => model.Name, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong> @Html.LabelFor(model => model.Abbreviation, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.Abbreviation, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong>@Html.LabelFor(model => model.Nickname, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.Nickname, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong>@Html.LabelFor(model => model.MarketValue, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.MarketValue, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong>@Html.LabelFor(model => model.Founded, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.Founded, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong>@Html.LabelFor(model => model.Logo, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.Logo, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <strong>@Html.LabelFor(model => model.CityId, new { @class = "col-lg-2 control-label" })</strong>
                @Html.DisplayFor(model => model.CityId, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.ActionLink("Edit", "Edit",
                            new { id = ViewContext.RouteData.Values["id"] },
                            new { @class = "btn btn-primary" })
                    </br></br>
                    @Html.ActionLink("Back to List", "Index",
                    null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>



