

@model Transfermarkt.Web.ViewModels.GoalInputVM
@{
    ViewData["Title"] = "AssignGoals";
    var message = ViewBag.Mistake;
}

<h1>AssignGoals</h1>
<h4>PlayerGoals</h4>

@if(message != null)
{
    <h1 style="color:red">@message</h1>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGoal" id="Add-goal">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Minute" class="control-label"></label>
                <input asp-for="Minute" class="control-label" />
                <span asp-validation-for="Minute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <select asp-for="Time" class="control-label" style="width:100px" asp-items="Model.Times"></select>
            </div>
            <div class="form-group">
                <label asp-for="AssistantId" class="control-label">Assistant</label>
                <select asp-for="AssistantId" asp-items="Model.AssistedPlayers" style="width:auto">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ScorerId" class="control-label">Scorer</label>
                <select id="player" asp-for="ScorerId" asp-items="Model.ScoredPlayers" style="width:auto"></select>
            </div>
            <div>
                <input id="hiddenId" asp-for="MatchId" type="hidden" />
            </div>
            <div>
                <input id="home" asp-for="HomeTeam" type="hidden" />
            </div>
            <div>
                <input id="away" asp-for="AwayTeam" type="hidden" />
            </div>
            <div>
                <input asp-for="LeagueId" type="hidden" />
            </div>
            <div class="form-group">
                <input id="saveButton" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

