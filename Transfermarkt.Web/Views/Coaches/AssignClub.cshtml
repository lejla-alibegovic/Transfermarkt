@model Transfermarkt.Web.ViewModels.CoachClubInputVM
@{
    ViewData["Title"] = "AssignClub";
}

<h1>AssignClub</h1>

<h4>CoachClub</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignClub">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label">First name</label>
                <input asp-for="FirstName" class="control-label" readonly />
            </div>
            <div class="form-group">
                <label  class="control-label">Last name</label>
                <input asp-for="LastName" class="control-label" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ClubId" class="control-label">Clubs</label>
                <select class="multilist" asp-items="Model.Clubs" name="Ids[]" multiple="multiple"></select>
            </div>
            <div>
                <input asp-for="CoachId" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{
